@{
    ViewData["Title"] = "Templates";
    @model List<TemplateModel>;
}

<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Meus Rascunhos</h1>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            @*<h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>*@
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Nome</th>
                            <th>Ultima Actualizacao</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (TemplateModel item in Model)
                        {
                            <tr>
                                <td><a href="/home?templateId=@item.Id" hre>@item.Name</a></td>
                                <td>@item.CreatedAt.ToString("dd-MM-yyyy")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
<!-- /.container-fluid -->